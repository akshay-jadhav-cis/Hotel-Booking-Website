<div>
  <% if (success && success.length) { %>
    <div class="alert alert-success alert-dismissible fade show d-flex align-items-center justify-content-between mt-4" role="alert">
      <div>
        <i class="bi bi-check-circle-fill me-2"></i>
        <%= success[0] %>
      </div>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% } %>
</div>
<div>
  <% if (error && error.length) { %>
    <div class="alert alert-danger alert-dismissible fade show d-flex align-items-center justify-content-between mt-4" role="alert">
      <div>
        <i class="bi bi-check-circle-fill me-2"></i>
        <%= error[0] %>
      </div>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% } %>
</div>
