<% layout("/layouts/boilerplate.ejs") %>



<body class="bg-light">
  <div class="container py-5">
    <div class="row g-4">
      <% for (let listing of allListing) { %>
        <div class="col-lg-4 col-md-6 col-sm-12">
          <a href="/listings/<%= listing._id %>" class="text-decoration-none text-dark" style="cursor: pointer;">
            <div class="card h-100 rounded-4 shadow-sm border-0 p-2">
              <img 
                src="<%= listing.image.url %>" 
                class="card-img-top rounded-top-4" 
                alt="Listing Image" 
                style="height: 200px; object-fit: cover;"
              >
              <div class="card-body px-3 py-3">
                <h5 class="card-title mb-2"><%= listing.title %></h5>
                <p class="card-text text-muted fs-5">&#8377; <%= listing.price.toLocaleString("en-IN") %></p>
              </div>
            </div>
          </a>
        </div>
      <% } %>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/js/bootstrap.bundle.min.js"></script>
</body>
