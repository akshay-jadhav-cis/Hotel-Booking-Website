<% layout("/layouts/boilerplate.ejs") %>

<body class="bg-light d-flex justify-content-center align-items-center vh-100">

  <div class="card text-center shadow p-4 error-card border-danger" style="max-width: 500px; width: 100%;">
    <h1 class="text-danger display-4">Error <%= err.statusCode || 500 %></h1>
    <p class="lead text-muted"><%= err.message || "Something went wrong!" %></p>
    <a href="/" class="btn btn-outline-primary mt-3">Back to Home</a>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

</body>
